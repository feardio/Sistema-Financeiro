@model UsuarioModel


<h3> Registrar minha conta!</h3>
<br/>
<form asp-controller="Usuario" asp-action="Registrar">
    <div class="form-group">
        <label for="email">Nome:</label>
        <input type="text" class="form-control" placeholder="Nome" asp-for="Nome">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" class="form-control" placeholder="Email" asp-for="Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="pwd">Senha:</label>
        <input type="password" class="form-control" placeholder="Senha" asp-for="Senha">
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="pwd">Data de Nascimeto:</label>
        <input type="date" class="form-control" placeholder="Data_Nascimento" asp-for="Data_Nascimento">
        <span asp-validation-for="Data_Nascimento" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-block btn-success">Registrar</button>
</form>